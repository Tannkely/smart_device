{
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "env": {
    "es2017": true,
    "browser": true,
    "node" : 2
  },
  "extends": "htmlacademy/vanilla",
  "rules": {
    "prefer-const": "off",
    "no-useless-return": "off",
    "quotes": [2, "single", { "avoidEscape": true, "allowTemplateLiterals": true }],
    "prefer-arrow-callback": [ "error", { "allowUnboundThis": false } ]
  }
}
